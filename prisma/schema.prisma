// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum EyesColor {
  BLUE
  GREEN
  BROWN
  BLACK
  GREY
}

enum HairColor {
  BLONDE
  BROWN
  BLACK
  RED
  GREY
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Authentication {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  firstName String
  lastName  String
  model     Model[]
}

model Model {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  birthDate   DateTime
  description String?
  eyescolor   EyesColor
  haircolor   HairColor
  gender      Gender
  height      Int
  weight      Int
  user        User      @relation(fields: [userId], references: [id])
  userId      Int       @unique
}
